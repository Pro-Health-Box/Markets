<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference android:title="Go Live?"
        android:defaultValue="false"
        android:summary="Check the box to start trading"
        android:key="isTradingLive"
        android:persistent="true">
    </CheckBoxPreference>

    <EditTextPreference android:title="Last Trade Date"
        android:key="lastTradeDate"
        android:summary="Date the last trade occurred">
    </EditTextPreference>


</PreferenceScreen>